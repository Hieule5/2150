import java.util.Scanner;

public class QuotientExceptionDemo {

	public static void main(String[] args) {

		int i = 0;

		do {
			Scanner input = new Scanner(System.in);
			System.out.print("Enter numerator integer: ");
			int numInt = input.nextInt();
			System.out.println();

			System.out.print("Enter denominator integer: it must not be 0: ");
			int denoInt = input.nextInt();
			System.out.println();
		} while (i < 4);
	}
}
