public class QuotientExceptionDemo {
public static void main(String[] args) {
	java.util.Scanner input = new java.util.Scanner(System.in);
	int num;
	int den;
	int result = 0;
	String response; 
	do{
	
	try{
	
	System.out.print("Enter a numerator integer: ");
	num = input.nextInt();
	
	System.out.print("Enter a demominator integer: ");
	den = input.nextInt();
	
	result = num / den;
	System.out.println(num + "/" + den + " + " + result);
	
	}catch(ArithmeticException ae)
	{
	System.out.println("You must not enter 0 for demominator. ");
	}
	
	}while(response.toLowerCase().contains("y"));
	
	System.out.print("Good bye!!!");
	
